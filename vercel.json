{
  "version": 2,
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/__/auth/:path*", "destination": "https://lucrazi.com.br/__/auth/:path*" },
    { "source": "/api/:path*", "destination": "/api/index.js" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
