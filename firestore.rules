rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    match /services/{serviceId} {
      allow read: if resource.data.status == "approved" || request.auth.token.role == "admin";
      allow write: if request.auth.uid == resource.data.ownerId || request.auth.token.role == "admin";
      allow create: if request.auth != null;
    }
    match /leads/{leadId} {
      allow create: if request.auth != null;
      allow read: if request.auth.token.role == "admin";
    }
  }
}
