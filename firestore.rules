rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // REGRAS ORIGINAIS (comentei para debug)
      // allow read: if request.auth.uid == userId || request.auth.token.role == "admin";
      // allow create: if request.auth != null && request.auth.uid == userId;
      // allow update, delete: if request.auth.uid == userId || request.auth.token.role == "admin";

      // REGRAS TEMPORÁRIAS PARA DEBUG (Permite leitura e escrita para usuários autenticados)
      allow read, write: if request.auth != null;

      // Permitir leitura pública de perfis de providers (para exibir em detalhes de serviços)
      allow read: if true;
    }
    match /services/{serviceId} {
      allow read: if true;
      allow create: if true;
      allow write: if true;
    }
    match /leads/{leadId} {
      allow create: if request.auth != null;
      allow read: if request.auth.token.role == "admin";
    }
    // Permitir leitura pública das categorias
    match /categories/{categoryId} {
      allow read: if true;
    }
  }
}
